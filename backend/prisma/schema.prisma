generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String            @id @default(cuid())
  username    String            @unique
  email       String            @unique
  password    String
  isAdmin     Boolean           @default(false)
  createdAt   DateTime          @default(now())
  games       Game[]            @relation("User_Game")
}

model Question {
  id          String            @id @default(cuid())
  number      Int               @unique
  question    String
  answers     Answer[] // for one question more answers possible
  games       Game[]            @relation("Question_Game")
}

model Answer {
  id          String            @id @default(cuid())
  // Relation to question
  relQuestN   Int
  question    Question          @relation(fields: [relQuestN], references: [number], onDelete: Cascade)
  // Answer text
  answer      String
  // Relationship results
  resultReka  Int
  resultDomi  Int
  resultKata  Int
  // Next question for this answer
  nextQuestN  Int
  // Relation to game
  game        Game[]              @relation("Answer_Game")
}

model Game {
  id          String            @id @default(cuid())
  name        String
  createdAt   DateTime          @default(now())
  users       User[]            @relation("User_Game")
  question    Question[]        @relation("Question_Game")
  answer      Answer []         @relation("Answer_Game")
}